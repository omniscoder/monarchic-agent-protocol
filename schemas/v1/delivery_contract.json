{
  "$id": "https://monarchic.ai/schema/v1/delivery_contract.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DeliveryContract",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "objective",
    "definition_of_done",
    "required_checks",
    "risk_tier"
  ],
  "properties": {
    "objective": {
      "type": "string",
      "minLength": 1
    },
    "definition_of_done": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "required_checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "risk_tier": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "max_cycle_minutes": {
      "type": "integer",
      "minimum": 1
    },
    "max_agent_turns": {
      "type": "integer",
      "minimum": 1
    },
    "pr_strategy": {
      "type": "string",
      "enum": ["single", "stacked", "incremental"]
    },
    "review_policy": {
      "type": "string",
      "enum": ["auto", "human_required"]
    },
    "rollback_strategy": {
      "type": "string",
      "enum": ["revert_commit", "revert_pr", "manual"]
    },
    "notes": {
      "type": "string"
    }
  }
}
