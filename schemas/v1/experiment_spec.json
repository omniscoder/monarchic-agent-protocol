{
  "$id": "https://monarchic.ai/schema/v1/experiment_spec.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ExperimentSpec",
  "type": "object",
  "additionalProperties": true,
  "required": ["experiment_id", "objective", "dataset_refs", "acceptance"],
  "properties": {
    "experiment_id": {
      "type": "string"
    },
    "objective": {
      "type": "string"
    },
    "hypothesis": {
      "type": "string"
    },
    "model_family": {
      "type": "string"
    },
    "seeds": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "dataset_refs": {
      "type": "array",
      "items": {
        "$ref": "dataset_ref.json"
      }
    },
    "acceptance": {
      "type": "object",
      "additionalProperties": true,
      "required": ["metric", "direction", "threshold"],
      "properties": {
        "metric": {
          "type": "string"
        },
        "direction": {
          "type": "string",
          "enum": ["maximize", "minimize", "target"]
        },
        "threshold": {
          "type": "number"
        },
        "min_effect_size": {
          "type": "number"
        },
        "max_variance": {
          "type": "number"
        },
        "confidence_level": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
