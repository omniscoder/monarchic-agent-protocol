{
  "$id": "monarchic.agent_protocol.v1.Task.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": true,
  "patternProperties": {
    "^(deliveryContract)$": {
      "$ref": "monarchic.agent_protocol.v1.DeliveryContract.schema.json"
    },
    "^(experimentSpec)$": {
      "$ref": "monarchic.agent_protocol.v1.ExperimentSpec.schema.json"
    },
    "^(gatesRequired)$": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "^(runContext)$": {
      "$ref": "monarchic.agent_protocol.v1.RunContext.schema.json"
    },
    "^(taskId)$": {
      "default": "",
      "type": "string"
    }
  },
  "properties": {
    "constraints": {
      "$ref": "google.protobuf.Struct.schema.json"
    },
    "delivery_contract": {
      "$ref": "monarchic.agent_protocol.v1.DeliveryContract.schema.json"
    },
    "experiment_spec": {
      "$ref": "monarchic.agent_protocol.v1.ExperimentSpec.schema.json"
    },
    "extensions": {
      "$ref": "google.protobuf.Struct.schema.json"
    },
    "gates_required": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "goal": {
      "default": "",
      "type": "string"
    },
    "inputs": {
      "$ref": "google.protobuf.Struct.schema.json"
    },
    "role": {
      "anyOf": [
        {
          "pattern": "^AGENT_ROLE_UNSPECIFIED$",
          "type": "string"
        },
        {
          "enum": [
            "PRODUCT_OWNER",
            "PROJECT_MANAGER",
            "DEV",
            "QA",
            "REVIEWER",
            "SECURITY",
            "OPS",
            "product_owner",
            "project_manager",
            "dev",
            "qa",
            "reviewer",
            "security",
            "ops"
          ],
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ],
      "default": 0,
      "title": "Agent Role"
    },
    "run_context": {
      "$ref": "monarchic.agent_protocol.v1.RunContext.schema.json"
    },
    "task_id": {
      "default": "",
      "type": "string"
    },
    "version": {
      "default": "",
      "type": "string"
    }
  },
  "title": "Task",
  "type": "object"
}
